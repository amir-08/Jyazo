<div class="container register">
<div class="col-md-6 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>


 <div>
   <%= devise_error_messages! %>
 </div>

 <div class="form-group centered">
    <%=  image_tag("resend.png", width:'220px', height: '60px') %>
 </div>
  
 <%= f.hidden_field :reset_password_token %>

 <div>
  <div class="row">
    <div class="form-group col-md-10 col-sm-12 col-xs-12 pad">
      <div class="form-1"> <%=  image_tag("email.png", width:'45px', height: '45px') %>
      <%= f.email_field :email, autofocus: true, class:"form-control",:required => true, placeholder: "Email to resend",value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)  %>
       </div>
    </div>
  </div>

  <div>
  <%= f.submit "Resend confirmation instruction", class:"btn btn-large btn-primary" %>
  </div>


</div>
</div>
</div>
<% end%>
  

