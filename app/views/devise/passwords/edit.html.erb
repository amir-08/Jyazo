<div class="container register">
<div >
 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
 <div class="col-md-10 col-md-offset-3"
   <%= devise_error_messages! %>
 </div>

 <div class="form-group centered">
    <%=  image_tag("create.png", width:'200px', height: '50px') %>
 </div>
  
 <%= f.hidden_field :reset_password_token %>

 <div>
  <div class="row">
    <div class="form-group col-md-10 col-sm-12 col-xs-12 pad">
      <div class="form-1"> <%=  image_tag("pass.png", width:'45px', height: '45px') %>
      <%= f.password_field :password, autofocus: true, class:"form-control",:required => true, placeholder: "Password" %>
        <% if @minimum_password_length %>
            <em><br><br>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-10 col-sm-12 col-xs-12">
      <div class="form-1"> <%=  image_tag("cpass.png", width:'45px', height: '45px') %>
        <%= f.password_field :password_confirmation, autocomplete: "off",:required => true, class:"form-control", placeholder: "Repeat Password" %>
      </div>
    </div>
  </div>

  

  <div>
   <%= f.submit "Change my password", class:"btn btn-large btn-primary" %>
  </div>


</div>
</div>
</div>
<% end%>
  