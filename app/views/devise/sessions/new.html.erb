<div class="container register ">
<div class="col-md-6 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div>
 <%= devise_error_messages! %></div>

  <div class="form-group centered">
    <%=  image_tag("login.png", width:'120px', height: '50px') %>
  </div>
 
 <div>
 <div class="row">
  <div class="form-group col-md-10 col-sm-12 col-xs-12">
      <div class="form-1"> <%=  image_tag("email.png", width:'45px', height: '45px') %>
      <%= f.email_field :email, autofocus: true, class:"form-control",:required => true, placeholder: "Email" %></div>
  </div>
  </div>

<div class="row">
  <div class="form-group col-md-10 col-sm-12 col-xs-12">
      <div class="form-1"> <%=  image_tag("pass.png", width:'45px', height: '45px') %>
      <%= f.password_field :password, autocomplete: "off",:required => true, class:"form-control", placeholder: "Password" %>
      </div>
  </div>
  </div>

 <div >
    <% if devise_mapping.rememberable? -%>
       
         
           <%= f.check_box :remember_me %> 
            &nbsp; Remember Me
           
     
  <% end -%>
  </div>

<div>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
<% end -%>
</div>
</div>

<br>
 <div class="centered">
  <%= f.submit "Sign in", class:"btn btn-large btn-primary" %>
  </div>


</div>
</div>
<% end %>










