
<div class="container">
<p id="notice"><%= notice %></p>

<%= form_tag events_path, :method => :get do %>

<div class="row">
  <div class="form-group  col-sm-12 col-xs-12">
      <div class="form-2">  <%= text_field_tag :search, params[:search],placeholder: "Enter event name" ,class:"form-control" %>
      </div><div>
    <%= submit_tag "Search Event", :name => nil,class:"btn btn-large btn-primary" %>
      </div>
  </div>
  </div>


  
 
<% end %>

<table class="table table-responsive ">
  <thead>
    <tr>
      <th>Event name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Address</th>
      
      <th>Organizer</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.address %></td>
        <td><%= event.organizer %></td>
        <td><%= link_to 'Show Event Detail', event %></td>
       
        
        
       
      </tr>
    <% end %>
  </tbody>
</table>
</div>
